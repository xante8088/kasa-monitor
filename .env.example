# Kasa Monitor Environment Configuration Template
# Copy this file to .env and update with your actual values

# SECURITY CRITICAL: Generate secure values for production deployment
# Use: openssl rand -base64 32  to generate secure keys

# JWT Configuration (REQUIRED FOR PRODUCTION)
JWT_SECRET_KEY=CHANGE_ME_TO_A_SECURE_256_BIT_KEY

# Database Configuration
SQLITE_PATH=kasa_monitor.db

# InfluxDB Configuration (optional - for time series data)
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=CHANGE_ME_TO_SECURE_TOKEN
# INFLUXDB_ORG=kasa-monitor
# INFLUXDB_BUCKET=device-data

# InfluxDB Docker Init (for docker-compose setups)
DOCKER_INFLUXDB_INIT_USERNAME=kasa-monitor
DOCKER_INFLUXDB_INIT_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DOCKER_INFLUXDB_INIT_ORG=kasa-monitor-org
DOCKER_INFLUXDB_INIT_BUCKET=kasa-monitor-bucket
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=CHANGE_ME_TO_SECURE_TOKEN

# Application Settings
KASA_MONITOR_HOST=0.0.0.0
KASA_MONITOR_PORT=5272
KASA_MONITOR_DEBUG=false

# CORS Security (IMPORTANT - restrict to your domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# TP-Link Cloud Credentials (optional - for device discovery)
# TPLINK_USERNAME=user@example.com
# TPLINK_PASSWORD=your-password

# Security Settings
ENFORCE_HTTPS=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# File Upload Security
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.zip,.py,.json
REQUIRE_PLUGIN_SIGNATURES=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO