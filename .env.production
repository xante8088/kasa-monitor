# Production Environment Configuration
# Copy this file to .env for local development or use Docker secrets for production

# JWT Configuration
JWT_SECRET_KEY=your-secure-256-bit-secret-key-here-replace-this-immediately

# Database Configuration
DOCKER_INFLUXDB_INIT_USERNAME=kasa-monitor
DOCKER_INFLUXDB_INIT_PASSWORD=your-secure-influxdb-password-here
DOCKER_INFLUXDB_INIT_ORG=kasa-monitor-org
DOCKER_INFLUXDB_INIT_BUCKET=kasa-monitor-bucket
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=your-secure-influxdb-admin-token-here

# SQLite Database (if used)
SQLITE_DATABASE_PATH=/app/data/kasa_monitor.db

# TP-Link Device Configuration (optional)
TPLINK_USERNAME=your-tplink-email@example.com
TPLINK_PASSWORD=your-tplink-password

# Application Configuration
KASA_MONITOR_HOST=0.0.0.0
KASA_MONITOR_PORT=5272
KASA_MONITOR_DEBUG=false

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://your-app.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/kasa-monitor.log

# Security
ENFORCE_HTTPS=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# File Upload Security  
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.zip,.py,.json
REQUIRE_PLUGIN_SIGNATURES=true

# Monitoring
HEALTH_CHECK_INTERVAL_SECONDS=30
METRICS_ENABLED=true